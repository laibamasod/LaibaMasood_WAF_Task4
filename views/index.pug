doctype html
html(lang="en")
  head
    title= 'Create your CV'
    script(type='text/javascript', src='https://cdn.tailwindcss.com')
  body
    section(class="text-gray-600 body-font relative")
      div(class="container px-5 py-24 mx-auto")
        div(class="flex flex-col text-center w-full mb-12")
          h1(class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900") Create your CV
          p(class="lg:w-2/3 mx-auto leading-relaxed text-base") Enter your basic details to generate a Formatted CV.
        div(class="lg:w-1/2 md:w-2/3 mx-auto")
          form(action="/generate_cv", method="POST") 
            div(class="flex flex-wrap -m-2")
              div(class="p-2 w-1/2")
                div(class="relative")
                  label(for="name" class="leading-7 text-sm text-gray-600") Name
                  input(type="text" id="name" name="name" class="w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-purple-500 focus:bg-white focus:ring-2 focus:ring-purple-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out")
              div(class="p-2 w-1/2")
                div(class="relative")
                  label(for="email" class="leading-7 text-sm text-gray-600") Email
                  input(type="email" id="email" name="email" class="w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-purple-500 focus:bg-white focus:ring-2 focus:ring-purple-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out")
              div(class="p-2 w-1/2")
                div(class="relative")
                  label(for="education" class="leading-7 text-sm text-gray-600") Education Level
                  input(type="text" id="education" name="education" class="w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-purple-500 focus:bg-white focus:ring-2 focus:ring-purple-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out")
              div(class="p-2 w-1/2")
                div(class="relative")
                  label(for="address" class="leading-7 text-sm text-gray-600") Address
                  input(type="text" id="address" name="address" class="w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-purple-500 focus:bg-white focus:ring-2 focus:ring-purple-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out")
              div(class="p-2 w-1/2")
                div(class="relative")
                  label(for="contact" class="leading-7 text-sm text-gray-600") Contact Number
                  input(type="number" id="contact" name="contact" class="w-full bg-gray-100 bg-opacity-50 rounded border border-gray-300 focus:border-purple-500 focus:bg-white focus:ring-2 focus:ring-purple-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out")
              div(class="p-2 w-full")
                button(type="submit" class="flex mx-auto text-white bg-purple-500 border-0 py-2 px-8 focus:outline-none hover:bg-purple-600 rounded text-lg") Create
